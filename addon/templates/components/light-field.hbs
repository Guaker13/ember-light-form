{{#if (has-block)}}
  {{#component template
    class=class
    field=(hash
      label=label
      control=(component control
        id=controlId
        value=(get model fieldName)
        onfocus=(action 'enterEditMode')
        onblur=(action 'leaveEditMode')
        update=(action 'update')
      )
      controlId=controlId
      value=(get model fieldName)
      errors=errors
      isDisplayingErrors=isDisplayingErrors
      enterEditMode=(action 'enterEditMode')
      leaveEditMode=(action 'leaveEditMode')
      update=(action 'update')
    )
    as |template|
  }}
    {{yield 
      (hash
        label=label
        controlId=controlId
        value=(get model fieldName)
        errors=errors
        isDisplayingErrors=isDisplayingErrors
        enterEditMode=(action 'enterEditMode')
        leaveEditMode=(action 'leaveEditMode')
        update=(action 'update')
      )
      template
    }}
  {{/component}}
{{else}}
  {{component component
    field=(hash
      label=label
      control=(component control
        id=controlId
        value=(get model fieldName)
        onfocus=(action 'enterEditMode')
        onblur=(action 'leaveEditMode')
        update=(action 'update')
      )
      controlId=controlId
      value=(get model fieldName)
      errors=errors
      isDisplayingErrors=isDisplayingErrors
      enterEditMode=(action 'enterEditMode')
      leaveEditMode=(action 'leaveEditMode')
      update=(action 'update')
    )
  }}
{{/if}}

{{#if hasBlock}}
  {{yield
    (hash
      controlId=controlId
      value=(get model fieldName)
      errors=errors
      label=(component 'light-label'
        for=controlId
        errors=errors
        isDisplayingErrors=isDisplayingErrors
      )
      enterEditMode=(action 'enterEditMode')
      leaveEditMode=(action 'leaveEditMode')
      update=(action 'update')
    )
  }}
{{else}}
  {{#if labelText}}
    {{light-label labelText
      for=controlId
      errors=errors
      isDisplayingErrors=isDisplayingErrors
    }}
  {{else if label}}
    {{component label
      for=controlId
      isDisplayingErrors=isDisplayingErrors
      errors=errors
    }}
  {{/if}}

  {{component control
    id=controlId
    value=(get model fieldName)
    onfocus=(action 'enterEditMode')
    onblur=(action 'leaveEditMode')
    update=(action 'update')
  }}
{{/if}}
